<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/news_custom_image_width"
            android:layout_height="@dimen/news_custom_image_height"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_content_tittle"
                style="@style/custom_content_tittle_style"/>

            <TextView
                android:id="@+id/tv_content"
                style="@style/custom_content_style"
                />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_sub_content_tittle"
        style="@style/custom_content_tittle_style"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tv_third_content_tittle"
        style="@style/custom_content_tittle_style"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        />
</LinearLayout>