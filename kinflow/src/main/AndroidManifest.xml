<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kapp.kinflow">

    <!--用于访问网络，网络定位需要上网-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--写入扩展存储，向扩展卡写入数据，用于写入缓存定位数据-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        >
        <activity android:name=".business.activity.SearchActivity"/>
        <activity android:name=".business.activity.MoreNovelsActivity"/>
        <activity android:name=".business.activity.AddCardActivity"/>
        <activity android:name=".business.activity.ManagerCardActivity"/>
        <activity android:name=".business.activity.NewsListActivity"/>
        <activity android:name=".business.activity.MoreSiteActivity"/>
        <activity android:name=".business.activity.NovelSearchActivity"/>
        <activity android:name=".business.activity.NovelDetailActivity"/>
        <activity android:name=".business.activity.MoreNovelsActivity2"/>
    </application>

</manifest>
