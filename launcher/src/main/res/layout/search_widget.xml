<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_widget_bar"
    android:layout_width="match_parent"
    android:layout_height="52.0dip"
    android:layout_margin="@dimen/search_widget_margin"
    android:background="@drawable/search_bg_black"
    android:orientation="horizontal"
    android:padding="@dimen/search_widget_padding">

    <!-- Global search icon -->
    <TextView
        android:id="@+id/search_hint"
        style="@style/SearchButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:contentDescription="@string/accessibility_search_button"
        android:src="@drawable/ic_home_search_normal_holo"
        android:text="@string/search_widget_hint"
        android:textColor="#9fff"
        android:textSize="16sp"/>

    <!-- search icon -->
    <ImageView
        android:id="@+id/search_button"
        style="@style/SearchButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/accessibility_voice_search_button"
        android:scaleType="centerInside"
        android:src="@drawable/ic_search"/>
</LinearLayout>