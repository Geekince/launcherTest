<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clock_widget_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/clock_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_clock_hour_0"
            android:layout_width="44dp"
            android:layout_height="55dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>
        <ImageView
            android:id="@+id/img_clock_hour_1"
            android:layout_width="44dp"
            android:layout_height="55dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_toRightOf="@id/img_clock_hour_0"/>

        <TextView
            android:id="@+id/txt_clock_seg"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/clock_widget_padding"
            android:layout_marginRight="@dimen/clock_widget_padding"
            android:layout_toRightOf="@id/img_clock_hour_1"
            android:textColor="#fff"
            android:textSize="28sp"
            android:text=":" />

        <ImageView
            android:id="@+id/img_clock_minute_0"
            android:layout_width="44dp"
            android:layout_height="55dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_toRightOf="@id/txt_clock_seg"/>
        <ImageView
            android:id="@+id/img_clock_minute_1"
            android:layout_width="44dp"
            android:layout_height="55dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_toRightOf="@id/img_clock_minute_0"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/clock_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/clock_layout"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/clock_widget_padding"
        android:textColor="#cfff"
        android:textSize="12sp"
        android:text="1月8日 周四下午"/>
</RelativeLayout>